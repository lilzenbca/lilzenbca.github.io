<?xml version='1.0' encoding='utf-8'?>
<addons><addon id="plugin.program.altwizard" name="[COLOR limegreen]ALT[/COLOR] Wizard" version="1.0.0" provider-name="lilzenbca">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.1.7" />
        <import addon="script.speedtester" optional="true" version="1.1.2" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.service" library="startup.py" start="startup" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en">[COLOR limegreen]ALT[/COLOR] Wizard</summary>
        <description lang="en">[COLOR limegreen]ALT[/COLOR] Wizard provides custom builds, maintenance tools, and updates.</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <source>https://github.com/lilzenbca/plugin.program.altwizard</source>
        <news>
1.0.0
 - Initial ALT Wizard release.
 - Forked from Open Wizard (base v1.4.9).
        </news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon><addon id="repository.lilzenbca" name="Lilzenbca Repository" version="1.0.0" provider-name="lilzenbca">
    <extension point="xbmc.addon.repository" name="Lilzenbca Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/lilzenbca/repository.lilzenbca/master/repo/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/lilzenbca/repository.lilzenbca/master/repo/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/lilzenbca/repository.lilzenbca/master/repo/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Lilzenbca Repository</summary>
        <description>Repository for personal builds</description>
        <disclaimer />
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon></addons>